$avatarSize = 40px;
$defaultTextColor = #3E444B;
$borderColor = #F1F2F4;
$linkColor = #4583FA;
$highlightColor = #FBF8EF;
$focusColor = #EFF4FB;

html {
	padding:0;
	margin:0;
}

body {
	padding:0;
	margin:0;
	padding-top:40px;
	
	a {
		&:link {
			color:$linkColor;
		}
	
		&:hover {
			color:lighten($linkColor, 10%);
		}
	
		&:visited {
			color:darken($linkColor, 20%);
		}
	}
}

.heading, .topic {
	color:$defaultTextColor;
	padding:0.5em;
	border-bottom:2px solid darken($borderColor, 5%);
	position:fixed;
	top:0;
	width:100%;
	background:rgba(255,255,255,1);
	z-index:2;
	box-shadow: 1px 1px 8px #EEF2FB;
	
	h1 {
		text-align:center;
		font-weight:300;
		font-size:1.4em;
		margin:0;
		padding:0;
	}
	
	h2 {
		text-align:left;
		font-weight:normal;
		font-size:0.9em;
		margin:0;
		padding:0.2em;
	}
}

.chat {
	position:relative;
	border-bottom:1px solid $borderColor;
	padding:15px 0;
	padding-right:15px;

	.avatar {
		display:inline-block;
		position:absolute;
		left:10px;
		top:18px;
		
		img {
			width:$avatarSize;
			height:$avatarSize;
			border-radius: $avatarSize;
			transition: all .4s ease-in-out;
			
			&:hover {
				transform: scale(1.05);
			}
		}
		
	}
	
	.messages {
		margin-left:60px;
		
		p {
			padding:0.25em;
			padding-left:0;
			margin:0;
			line-height:135%;
			color:#4F5562;
			
			img {
				vertical-align:middle;
			}
		}
	}
	
	.sender{
		font-weight:bold;
		color:$defaultTextColor;
	}
	
	.time {
		position:absolute;
		right:15px;
		font-size:0.8em;
		color:#6289BE;
	}
}

.mention {
	background:$highlightColor;
	position:relative;
	&:after{
	    content: '';
	    display: block;
	    right: 0;
	    top: 0;
	    position: absolute;
		width:20px;
	    border-bottom: 12px solid transparent;
	    border-right: 12px solid #FBBF00;
	}
	
	.time {
		color:#EEB600;
	}
	
}

.autoreply {
	p {
		font-style:italic;
	}
}

.status,
.event {
	text-align:center;
	color:lighten($defaultTextColor, 20%);
	padding:0.6em;
	border-bottom:1px solid #fff;
	font-size:0.85em;
	background:#F7F8FA;
	padding-right:15px;
}


.focus {
	background:$focusColor;
	border-bottom:1px solid #fff;
}

.firstFocus {
	border-top:2px solid darken($focusColor, 40%);
	background:$focusColor;
		border-bottom:1px solid #fff;
}

.history {
	background:#F5F5F5;
	opacity:0.7;
	transition:all 0.75s ease-out;
	
	&:hover {
		opacity:999;
		background:#fff;
	}
}